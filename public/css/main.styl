body header.main nav#menu li#leftright-container
  width 3em
  margin 0 0.5em 0 3em
  display inline-block
  vertical-align middle

  #btn-left, #btn-right
    color lighten(a_color, 30%)
    &:hover
      color darken(a_color, 70%)

  #btn-left
    float left
  #btn-right
    float right

@media (max-width: 450px)
  body
    width 95%
    font-size 23px

    &.js.fullscreen
      header.main
        margin -6em 0 0

    header.main
      nav#menu
        ul
          li
            display block
            margin 0.5em 0

            &#leftright-container
              margin 0
              font-size 1.2em


    #extra-menu-container
      font-size 1.2em
      left .5em
      position fixed
      top .5em

      li
        display block
